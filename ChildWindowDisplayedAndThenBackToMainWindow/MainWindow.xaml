<Window x:Class="ChildWindowDisplayedAndThenBackToMainWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" WindowStyle="None" AllowsTransparency="True"
        WindowState="Maximized" 
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Margin="10,10,10,10">
            We should run this application in VisualStudio and attache to debug. 
            <LineBreak></LineBreak>
            And then we can see that the child window is displayed first, 
            <LineBreak></LineBreak>
            then the child window is displayed behind the main window,
            <LineBreak></LineBreak>
            and then the child window is displayed again in front of the main window
        </TextBlock>
        <Button Content="Show sub window" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Button_OnClick"/>
    </Grid>
</Window>
